	<div class="rodape">
		<div class="mensagem_wrapper">
			<div class="mensagem">
				<%= image_tag('logo_proiz_branco.png')%>
				<p><%= t 'inicial.rodape.mensagem' %></p>
			</div>
		</div>
		
		<div class="endereco">
			<h3><%= t 'inicial.rodape.cidade' %></h3>
			<h5><%= t 'inicial.rodape.logradouro' %></h5>
			<h5><%= t 'inicial.rodape.bairro' %></h5>
			<h3><%= t 'inicial.rodape.telefone' %></h3>
		</div>
		<div class="endereco">
			<h3>Curitiba, PR</h3>
			<h5>Rua Marechal Deodoro, 262</h5>
			<h5>1º andar, Centro</h5>
			<h3>+55 (41) 3018-6003</h3>
		</div>

	</div>
	<footer>
		<ul id="menu_inferior">
			<li><%= link_to t('menu_rodape.contato'),contato_path %></li>
			<li><%= link_to t('menu_rodape.oportunidades'),contato_path %></li>
			<li><%= link_to t('menu_rodape.lab'),lab_path %></li>			
		</ul>
		<p><%= t 'inicial.rodape.copyright' %></p>
	</footer>
