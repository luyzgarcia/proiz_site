			<%= link_to '', 'https://www.youtube.com/user/ProizAgencia', :target => "_blank", :class => 'youtube_padrao_2' %>
			<%= link_to '', 'https://www.linkedin.com/company/proiz', :target => "_blank", :class => 'linkedin_padrao_2 linkedin_padrao_2' %>
        </div>
	</div>
    <style>
		.newsletter form {
			height: 39px;	
		}
