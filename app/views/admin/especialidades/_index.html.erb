<div class="lista_cadastrados">
	<h4 class="titulo">
		Especialidades Cadastradas
	</h4>
	<table>
		<tr>
			<th>Titulo</th>						
			<th>Data de criação</th>
			<th>Estado</th>
			<th>Ação</th>
		</tr>
		<% @especialidades.each do |esp| %>
			<tr class="item" id="especialidade_<%= esp.id %>">
				<td>
					<%= esp.titulo %>
				</td>				
				<td>
					<%= esp.created_at.to_s(:create) %>
				</td>
				<td>
					<%= link_to '', 
						mudarstatus_admin_especialidade_path(esp),
						:class => esp.status == 1 ? 'status_ativo' : 'status_inativo', 
						:confirm => 'Alterar status',
						:method => 'get',
						:data => {:'message' => "Você está prestes a altear o status desta especialidade."} %>
						
				</td>
				<td>
					<%= link_to "", edit_admin_especialidade_path(esp),  :class => 'bt_editar_1 tooltips', :title => "Editar item" %>
					
					<%= link_to "", [:admin,esp], :remote => true, 
						:confirm => 'Excluir',
						:data => {:'message' => "Você está prestes a excluir esta especialidade?"},
						:method => :delete,
						:class => 'bt_excluir_1 tooltips',
						:title => 'Excluir item'%>
				</td>
			</tr>
		<% end %>
	</table>
</div>
	


