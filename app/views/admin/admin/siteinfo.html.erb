<div class="formulario lista_cadastrados">
	<div class="item">
		<%= form_for([:admin,@siteinfo]) do |c| %>
			<h3 class="titulo">Dados do Site
			<% if @editando == true %>
				<p class="editando">Clique no botão "Salvar alterações" para salvar as alterações realizadas</p>
			<% end %>
			</h3>
			<% if @siteinfo.errors.any? %>
			
				<div id="erros">
					<div class="erros_info">
						<h2>Atenção</h2><br/>
						<h4>Você não preencheu todas as informações necessárias.</h4>
						<ul>
							<% for message in @siteinfo.errors.full_messages %>
								<li><%= message %></li>
							<% end %>
						</ul>
						<div class="item_info_botoes">
							<h3>O que você gostaria de fazer? </h3>
							<%= link_to "Cancelar e sair", admin_siteinfo_path, :class => "link_limpar" %>
							<a id="fechar" href="#" class="link_salvar fechar">Voltar e preencher</a>
						</div>
					</div>
				</div>
			<% end %>
			<a href="#" class="fechar"></a>
			<a href="#" class="esconder"></a>
			<div class="item_info" id="clienteform">
				
				<div class="item_info_detalhe" id="1">
					<h5><%= c.label :nomesite %></h5>					
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :nomesite, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>
				<div class="item_info_detalhe">
					<h5><%= c.label :sobre %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_area :sobre, :disabled => @editando, :style => "width:550px;" %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>
				<div class="item_info_detalhe">
					<h5><%= c.label :metatags %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :metatags, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>			
				<div class="item_info_detalhe">
					<h5><%= c.label :logradouro %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :logradouro, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>
				<div class="item_info_detalhe">
					<h5><%= c.label :numero %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :numero, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>
				<div class="item_info_detalhe">
					<h5><%= c.label :bairro %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :bairro, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>		
				<div class="item_info_detalhe">
					<h5><%= c.label :cidade %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :cidade, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>	
				<div class="item_info_detalhe">
					<h5><%= c.label :estado %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :estado, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>	
				<div class="item_info_detalhe">
					<h5><%= c.label :pais %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :pais, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>		
				<div class="item_info_detalhe">
					<h5><%= c.label :email %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :email, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>
				<div class="item_info_detalhe">
					<h5><%= c.label :telefone %></h5>
					<h4 class='<%= 'bloqueado' if @editando %>'><%= c.text_field :telefone, :disabled => @editando %></h4>
					<%= link_to_function("", "enable_field(this)",:class => 'bt_libera_editar') if @editando %>
				</div>			
				
				
				<div class="item_info_botoes">
					<% if @editando == true %>
						<%= link_to "Limpar alterações", admin_siteinfo_path,
						:method => 'get',
						:confirm => 'Descartar alterações',
						:data => {:'message' => "Você está prestes a descartas as informações aditadas, tem certeza?"},
						:class => "link_limpar" %>
						<%= c.submit 'Salvar alterações', 
						:confirm => 'Salvando alterações',
						:data => {:'message' => "Você está prestes a alterar as informações aditadas."},
						:class =>'link_salvar link_editando'%>
					<% else %>
						<%= c.submit 'Salvar', :class =>'link_salvar' %>
					<% end %>
				</div>
			</div>
		<% end %>
	</div>
</div>
