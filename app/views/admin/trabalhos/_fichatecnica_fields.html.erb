<div class="form_many form_ficha <%= novo == false ? 'item_many' : ''	 %>">
	<%= f.hidden_field :ordem, :class => 'ordem_imagem' %>
	<%= f.hidden_field(:id) %>
	<div class="ficha_upload">
		<p>Campo</p>
		<div class="chave <%= novo == false ? 'bloqueado' : '' %>">
			<%= 
				if novo == true
					f.text_field :chave 
				else
					f.text_field :chave, disabled: 'disabled'
				end 
			%>
		</div>
		<div class="valor <%= novo == false ? 'bloqueado' : '' %>">
			<p>Valor</p>
			<%=
				if novo == true
					f.text_field :valor
				else
			 		f.text_field :valor, disabled: 'disabled'
			 	end 
			 %>
		</div>
		<div class="ordem  <%= 'escondido ' if novo %><%= 'bloqueado' if !novo %>">
			<%= link_to_function('','subir_nivel(this)', :class => 'up') %>
			<%= link_to_function('','descer_nivel(this)', :class => 'down') %>
			<%= link_to_remove_fields '', f if !novo %>	
		</div>
	</div>
	<%= 
	#if novo == true
		link_to_adicionar_ficha "Adicionar", f if novo
	#else
	#	link_to_remove_fields "remove", f
	#end
	%>
</div>
