<div class="wrapper_login">
	<div class="login_proiz">
		<%= image_tag "logo_proiz.png" %>
		<h4>Gerenciador de conte√∫do</h4>
	</div>
	<div class="login_form">
		<%= form_tag admin_sessions_path do %>
			
			<p>
				<%= text_field_tag :email, params[:email], :placeholder => 'Email', :size => "40" %>
			</p>
			
			<p>
				<%= password_field_tag :password, params[nil], :placeholder => 'Senha' , :size => "40" %>
			</p>
			
			<p class="button"><%= submit_tag "Entrar" %></p>
		<% end %>
	</div>
</div>
