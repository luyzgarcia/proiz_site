<div class="formulario">
	<div class="item">
		<%= form_for(@noticiacateg,remote:true) do |f| %>
			<h3 class="titulo">Novo cliente</h3>
			<% if @editando == true %>
				<p class="editando">Editando... Não esqueça de salvar as alterações no fim do box</p>
			<% end %>
			<% if @noticiacateg.errors.any? %>
				<div id="erros">
					<div class="erros_info">
						<h2>Atenção</h2><br/>
						<h4>Você não preencheu todas as informações necessárias.</h4>
						<ul>
							<% for message in @noticiacateg.errors.full_messages %>
								<li><%= message %></li>
							<% end %>
						</ul>
						<div class="item_info_botoes">
							<h3>O que você gostaria de fazer? </h3>
							<%= link_to "Cancelar e sair", noticiacategs_path, :remote => true, :class => "link_limpar" %>
							<a id="fechar" href="#" class="link_salvar fechar">Voltar e preencher</a>
						</div>
					</div>
				</div>
			<% end %>
			<div class="item_info" id="categoria_">
				<div class="item_info_detalhe">
					<h5><%= f.label :titulo %></h5>
					<h4><%= f.text_field :titulo %></h4>
				</div>
				
				<div class="item_info_detalhe">
					<h5><%= f.label :descricao %></h5>
					<h4><%= f.text_field :descricao %></h4>
				</div>
				
				<div class="item_info_detalhe">
					<h5><%= f.label :status %></h5>
					<h4><%= f.select(:status,[["Ativo","1"],["Inativo","0"]]) %></h4>
				</div>
				
				<div class="item_info_botoes">
					<% if @editando == true %>
						<%= link_to "Limpar alterações", noticiacategs_path, :remote => true, :class => "link_limpar" %>
						<%= f.submit %>
					<% else %>
						<%= f.submit 'Salvar', :class =>'link_salvar' %>
					<% end %>
				</div>
			</div>
			<% end %>
	</div>	
</div>
