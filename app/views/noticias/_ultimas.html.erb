<div class="noticias_ultimas">
	<div class="wrapper_ultimas">
		<h3><%= t('noticias.ultimas') %></h3>
		<div id="items_noticias">
			<% num = 0 %>
			<% @noticias.each_with_index do |noticia, index| %>
				<% num += 1 %>
				<%= render 'item_noticia', :noticia => noticia %>
				<% if num == 3 %>
					<hr />
				<% num = 0
					end %>
			<% end %>
		</div>
		
		<%= form_tag mais_noticias_path,:id => 'mais_noticias', :method => 'get', :remote => true do %>
			
			<%= hidden_field_tag 'num_noticias', '6' %>
			<div id="" class="bt_padrao1 botao_noticias">
				<%= button_tag(type: 'submit') do %>
				<div class="circulo">
					<span></span>
				</div>
				<div class="mensagem">
					<p><%= t 'inicial.noticias.botao' %></p>
				</div>
			<% end %>
			</div>			
		<% end %>		
	</div>	
</div>
