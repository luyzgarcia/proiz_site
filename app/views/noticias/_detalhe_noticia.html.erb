
<div id="noticia">
	<div class="noticia-info">
		<div class="wrapper_noticia">
			<div class="noticia">
				<div class="titulo_noticia">
					<h2><%= @noticia.titulo %></h2>
					
					<div class="recursos_download">
						<% if @noticia.recursos.size > 0 %>
						<h4>Recursos para download</h4>
						<ul>
							<% @noticia.recursos.each do |recurso| %>
								<li><%= link_to recurso.descricao, recurso.arquivo.url(:original, false),  :target => "_blank" %></li>	
							<% end %>
						</ul>
						<% end %>
					</div>
				</div>
				<div class="data_publicacao">
					<h3><%= I18n.l @noticia.created_at, :format => :longo %></h3>
				</div>
				<style>
					
				</style>
				<div class="noticia_detalhe">
					<div class="share_noticia">
						<div class="share_mobile">
							<h3>Gostou?</h3>
							<h4>Compartilhe essa p√°gina com seus amigos</h4>
						</div>
						<div class="compartilhar_noticia_integra">
							<a href="#" class="continue_lendo"></a>
							<%= fb_share('1501616463400377', 
									noticia_url(@noticia),
									'compartilhar_face',{}) %>
                                  
							<%= google_share(noticia_url(@noticia),'compartilhar_google') %>
							
							<%= twitter_share(noticia_url(@noticia), 'compartilhar_twitter') %>
						</div>
					</div>
					<div class="texto_noticia">
						<%= @noticia.conteudo.html_safe %>
						<a title="Share this article/post/whatever on Facebook" 
						    href="http://www.facebook.com/sharer/sharer.php?s=100&p[url]=http://proiz.herokuapp.com&p[title]=the title you want to share&p[Summary]=the  you want to share" 
						    target="_blank">Compartilhar no face	</a>
					</div>
					
				</div>
			</div>
		</div>
	</div>
</div>