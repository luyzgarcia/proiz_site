

$('#grid').html('');

$('#detalhe_modal').hide();

<% @trabalhos.each do |trab| %>
	$conteudo = "<%= escape_javascript(render 'item_trabalho', :trab => trab )%>";
	$('#grid').append($conteudo);
<% end %>

new AnimOnScroll(document.getElementById('grid'), {
	minDuration :0.4,
	maxDuration : 1,
	viewportFactor : 0.5
});

adicionaClickItemsGrid();

$('#carregando_trabalho').animate({
	opacity: 0
}, 200, function() {
	$(this).hide();
	$(this).css('opacity','1');
	$('#grid').css('opacity','1');
});
