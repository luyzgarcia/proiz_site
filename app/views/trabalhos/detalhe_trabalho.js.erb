
$('#detalhe_modal').html("<%= escape_javascript(render 'detalhe_trabalho', :trab => @trabalho) %>")

var img = $('#detalhe_modal img');
var length = img.length;

if(length > 0) {
	img.load(function(){
	    length--;
		//loading();
	    if(length == 0){
	        mostraModal();
	    };
	});
}else {
	mostraModal();
}

function mostraModal() {
	//alert("All images loaded");
	
	//$('#carregando_trabalho').hide();
	$('#carregando_trabalho').animate({
		opacity: 0
	}, 200, function() {
		$(this).hide();
		$(this).css('opacity','1');
		//$('#grid').css('opacity','1');
	});
    $('#detalhe_modal').fadeIn('slow',function(){
		//Ao terminar de mostrar a janela, ele aumenta o tamanho da div interna para nao explodir a altura
		alturamodal = $('#trabalho').height();
		alturacontainer = $('.corpo_trabalhos').height();
		//alert(alturamodal);
		if(alturamodal > alturacontainer) {
			$('.corpo_trabalhos').css('height',alturamodal +70+'px');	
		}
		setTimeout(function() {
			$('#grid').css('opacity','1');	
		},1000);
				
	});
	divisao_4();
	stoploading();
	adicionaEfeitoImagensTrabalho();
	
}

